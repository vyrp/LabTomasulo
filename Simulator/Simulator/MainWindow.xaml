<Window x:Name="MainWindow1" x:Class="LabTomasulo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulador Tomasulo" Height="350" Width="525" MinWidth="979.7" MinHeight="660">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="559*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="368*"/>
                <ColumnDefinition Width="149*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="132*"/>
                <RowDefinition Height="131*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="Registers" Grid.Row="1"/>
            <DataGrid x:Name="ReserveStations"/>
            <DataGrid x:Name="CurrentClock" Grid.Column="1"/>
            <DataGrid x:Name="RecentMemory" Grid.Column="1" Margin="0,0,0,-1" Grid.Row="1"/>
        </Grid>
        <Menu x:Name="File">
            <MenuItem Header="File" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="6,0" Height="26" >
                <MenuItem Header="Open" Click="OpenBtn_Click"/>
                <MenuItem Header="Exit" Click="ExitBtn_Click"/>
            </MenuItem>
            <MenuItem x:Name="HelpBtn" Header="Help" Click="HelpBtn_Click"/>
        </Menu>
        <Rectangle Fill="#FFF4F4F5" Stroke="Black" Grid.Row="2"/>
        <Label x:Name="FilePath_lbl" Content="Escolha um arquivo para compilar." Grid.Row="2" Margin="0,1,219,0" VerticalContentAlignment="Center" Padding="25,5,5,5"/>
        <Grid Margin="758,0,0,0" Grid.Row="2">
            <Button x:Name="PlayBtn" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="PlayBtn_Click" FontSize="30" VerticalContentAlignment="Center" FontFamily="Arial Black" Width="50" Margin="0,0,150,0" IsEnabled="False" IsCancel="True"/>
            <Button x:Name="StepBtn" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="StepBtn_Click" FontSize="30" VerticalContentAlignment="Center" FontFamily="Arial Black" Width="50" Margin="0,0,100,0" IsEnabled="False"/>
            <Button x:Name="PauseBtn" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="PauseBtn_Click" FontSize="30" VerticalContentAlignment="Center" FontFamily="Arial Black" Width="50" Margin="0,0,50,0" IsEnabled="False"/>
            <Button x:Name="StopBtn" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="StopBtn_Click" FontSize="30" VerticalContentAlignment="Center" FontFamily="Arial Black" Width="50" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
