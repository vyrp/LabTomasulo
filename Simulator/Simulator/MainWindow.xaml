<Window x:Name="MainWindow1" x:Class="LabTomasulo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulador Tomasulo" Height="350" Width="525">
    <Grid Margin="0">
        <Menu x:Name="File" Grid.ColumnSpan="2" VerticalAlignment="Top">
            <MenuItem Header="File" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="6,0" Height="26" >
                <MenuItem Header="Open" Click="OpenBtn_Click"/>
                <MenuItem Header="Exit" Click="ExitBtn_Click"/>
            </MenuItem>
            <MenuItem Header="Help"/>
        </Menu>
        <Grid Height="30" Margin="0" VerticalAlignment="Bottom">
            <Rectangle Fill="#FFF4F4F5" Stroke="Black"/>
            <Label x:Name="FilePath_lbl" Content="Escolha um arquivo para compilar." Margin="0,0,128,0"/>
            <ToolBar HorizontalAlignment="Right" Margin="0">
                <Button x:Name="PlayBtn" Content="Play" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="PlayBtn_Click"/>
                <Button x:Name="StepBtn" Content="Step" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="StepBtn_Click"/>
                <Button x:Name="PauseBtn" Content="Pause" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="PauseBtn_Click"/>
                <Button x:Name="StopBtn" Content="Stop" VerticalAlignment="Stretch" HorizontalAlignment="Right" Click="StopBtn_Click"/>
            </ToolBar>

        </Grid>
    </Grid>
</Window>
